{
  "publisher": "luojiahai",
  "name": "waver-theme",
  "displayName": "Waver Theme",
  "description": "Waver theme for VSCode",
  "version": "0.1.1",
  "packageManager": "pnpm@10.20.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/luojiahai/waver-vscode-theme.git"
  },
  "bugs": {
    "url": "https://github.com/luojiahai/waver-vscode-theme/issues"
  },
  "keywords": [
    "theme",
    "dark",
    "light"
  ],
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Themes"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Waver Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/waver-dark-color-theme.json"
      },
      {
        "label": "Waver Light",
        "uiTheme": "vs",
        "path": "./themes/waver-light-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "tsx scripts/index.ts",
    "dev": "tsx watch scripts/index.ts",
    "vscode:prepublish": "npm run build",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "@vscode/vsce": "^3.7.1",
    "color": "^5.0.3",
    "eslint": "^9.39.1",
    "fs-extra": "^11.3.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "waver-color": "^0.0.17"
  },
  "preview": true
}
